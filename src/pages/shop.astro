---
import '../styles/Shop.scss'
import Nav from '../components/Nav'
import Footer from '../components/Footer.astro'
---
<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/x-icon" href="/logo-new.png" />
	<title>UCSB SAE</title>
</head>

<body>
	<div class="relative">
		<div class="fixed z-50 w-screen">
			<Nav currentPage={"Pre-order"} client:visible />
		</div>
			<div class="w-full h-screen bg-navy flex flex-col justify-center">
				<!-- this is the container of the donate text and the donate button -->
				<div class="w-full min-h-2/5 flex flex-row justify-center">
				<!-- the content in each box is centered using css grid -->
					<div
						class="bg-shopbox text-white rounded-2xl w-full md:w-1/3 h-full grid place-content-center"
					>
						<div class="mx-4 grid place-content-center">
							<h1 class="my-2 text-md md:text-xl lg:text-2xl"> Pre Order Our Merch! </h1>
							<p class="text-md md:text-md lg:text-lg">
								Support us by pre-ordering our awesome merch! All orders will be available for pickup at Gaucho Racing general meetings in approximately 4 weeks (early March).
							</p>
						</div>
						<div class="md:my-4 lg:my-8 grid place-content-center">
							<a href={"https://forms.gle/ZGHjk2VTq5BwA26G7"} class="cursor-pointer bg-cyan rounded-md p-4 md:p-2 lg:p-4">Pre Order Now!</a>
						</div>
					</div>
				</div>
				<!-- <div class='flex-none shrink-0 w-1/2 lg:w-1/3 h-full'> -->
				<!--     <img class='py-2 object-contain h-full w-full'/> -->
				<!-- </div> -->
			</div>
		<Footer />
	</div>
</body>

</html>
<style>
	@import url('https://fonts.googleapis.com/css2?family=Caveat:wght@700&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@500&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@500&display=swap');

	body {
		background-color: rgb(17, 24, 39);
	}

	h1 {
		font-size: 1.5rem;
	}
</style>

